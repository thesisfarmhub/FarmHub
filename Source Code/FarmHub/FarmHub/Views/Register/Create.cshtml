@model Model.DTO.Trader.Register

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}

@*
<script src="../../Scripts/jquery-1.3.2.min.js" language="javascript" type="text/javascript" />
<script src="../../Scripts/jquery-ui-1.7.1.custom.min.js" type="text/javascript" />*@


@section header{
    Đăng kí Tài Khoản
}

@section FooterScript{

<script src="~/Scripts/CKFinderScript.js"></script>
}

<div class="form-horizontal">
    <h4>TRADER_REGISTER</h4>
    <hr />

    @using (Html.BeginForm("Create", "Register", FormMethod.Post))
    {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label> Tài Khoản:</label>

        @Html.TextBoxFor(model => model.UserAu.Name_User, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.UserAu.Name_User, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        <label> Mật Khẩu:</label>

        @Html.PasswordFor(model => model.UserAu.Password_User, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.UserAu.Password_User, "", new { @class = "text-danger" })

    </div>
    <br />
    <div class="form-group">
        <label> Ngày Sinh:</label>

        @Html.TextBoxFor(model => model.trader.Birthday_Trader, new { type = "date", htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.trader.Birthday_Trader, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        <label> Giới Tính </label>

        @*@Html.DropDownListFor(model => model.Trader.Gender_Trader, new List<SelectListItem>
            {
            new SelectListItem { Text = "Nam", Value ="true", Selected = true };
            new SelectListItem { Text = "Nam", Value = "false", Selected = true };
            })*@
            @Html.DropDownListFor(model => model.trader.Gender_Trader, new[] {
            new SelectListItem() {Text = "Nam", Value = bool.TrueString},
            new SelectListItem() {Text = "Nữ", Value = bool.FalseString}
            }, "Chọn Giới Tính")
            @Html.ValidationMessageFor(model => model.trader.Gender_Trader, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        <label>Địa Chỉ: </label>

        @Html.TextBoxFor(model => model.trader.Address_Trader, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.trader.Address_Trader, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        <label>Số Điện Thoại: </label>

        @Html.TextBoxFor(model => model.trader.Telephone_Trader, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.trader.Telephone_Trader, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        <label>Email:</label>

        @Html.TextBoxFor(model => model.trader.Email_Trader, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.trader.Email_Trader, "", new { @class = "text-danger" })

    </div>

    @*<div class="form-group">
        <label>Ảnh Đại Diện </label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.trader.Ima, new { htmlAttributes = new { @class = "form-control", @id = "txtImage" }, id = "txtImage" })
            <a id="btnSelectImage" href="#">Chọn ảnh</a>
            @Html.ValidationMessageFor(model => model.trader.Image_Trader, "", new { @class = "text-danger" })
        </div>
    </div>*@


    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
    }
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
