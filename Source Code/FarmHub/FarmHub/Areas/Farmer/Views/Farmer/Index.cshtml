@model FarmHub.Areas.Farmer.Models.FarmerHomePageModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Farmer/Views/Shared/_Layouts.cshtml";
}

<head>
    <title> Home Page Farmer</title>
</head>

<!-- Start Chef Section - TRENDING: Top 5 nông sản bán chạy/bán ế nhất-->
<section id="mu-chef">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-chef-area">
                    <div class="mu-title">
                        <span class="mu-subtitle">Top 7</span>
                        <h2>NÔNG SẢN ĐẶT MUA NHIỀU NHẤT</h2>
                        <i class="fa fa-spoon"></i>
                        <span class="mu-title-bar"></span>
                    </div>
                    <div class="mu-chef-content">
                        <ul class="mu-chef-nav">
                            @foreach (var item in Model.FarmerListTopProduct)
                            {
                                <li>
                                    <div class="mu-single-chef">
                                        <figure class="mu-single-chef-img">
                                            <img src="@item.Image_Product" alt="chef img">
                                        </figure>
                                        <div class="mu-single-chef-info">
                                            <h4>@item.Name_Product</h4>
                                            <span>@item.Quantity_SaleOffer tấn - @item.Name_Seed</span>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Chef Section -->
