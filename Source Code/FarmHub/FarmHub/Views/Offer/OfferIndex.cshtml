<script type="text/javascript">
    $(document).ready(function () {
        $('select').niceSelect();
        $('select').niceSelect('update');

        var hideDelay = true;
        $('#NewOfferModal').on('hidden.bs.modal', function (e) {
            if (hideDelay) {
                $('.modal-backdrop').remove();
                $('.modal').removeClass('animated fadeInDownBig').addClass('animated fadeOutDownBig');
           
                hideDelay = false;
                setTimeout(function () {
                    $('#NewOfferModal').modal('hide');
                    $('.modal').removeClass('animated fadeOutDownBig').addClass('animated fadeInDownBig');
                }, 700);
                return false;
            }
            hideDelay = true;
            return true;
        });
    });

   
   
</script>

