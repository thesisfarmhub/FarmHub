<div class="modal animated fadeInDownBig " data-easeout="slideDownIn"  id="NewOfferModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" 
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Tạo đơn mới</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="fa fa-close">&times;</span>
                    </button>
                </div>

                @using (Html.BeginForm("Create", "Offer", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                <div class="modal-body mx-3">

                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" for="form3">Sản Phẩm</label>
                        <select class="wide RoundCorner" name="productId">
                            <option data-display="---Chọn Sản Phẩm---">---Chọn Sản Phẩm---</option>
                            @foreach (var item in ViewBag.productList)
                            {
                                <option value="@item.Id_Product">@item.Name_Product</option>
                            }
                        </select>
                    </div>

                    <br />



                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" for="form2">Số lượng</label>
                        <input type="text" name="quantity" class="form-control validate RoundCorner bigInput">
                    </div>

                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" for="form3">Sản Phẩm</label>
                        <select class="wide RoundCorner" name="unit">
                            <option data-display="---Chọn Sản Phẩm---">---Chọn Sản Phẩm---</option>
                            @foreach (var item in ViewBag.unitList)
                            {
                                <option value="@item.Id_MassUnit">@item.Name_MassUnit</option>
                            }
                        </select>
                    </div>

                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" for="form2">Giá</label>
                        <input type="text" name="price" class="form-control validate RoundCorner bigInput">
                    </div>



                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" for="form2">Thời gian trả tiền</label>
                        <input type="text" name="payingTime" class="form-control validate RoundCorner bigInput"> ngày
                    </div>

                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" for="form2">Thời gian giao hàng</label>
                        <input type="text" name="deliveringTime" class="form-control validate RoundCorner bigInput"> ngày
                    </div>
                    
                    <div class="md-form mb-5">
                        <input type="checkbox" name="canBargain" value="true" form-control validate RoundCorner bigInput"> Cho phép thỏa thuận
                    </div>

                    <div class="modal-footer d-flex justify-content-center">
                        <button class=" big green button RoundCorner">Tạo Mới </button>
                    </div>

                </div>


                }
            </div>
