@model IEnumerable<Model.EF.TRANSACTION_ORDER>

@{
    ViewBag.Title = "Transaction";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}
<link href="~/Assets/common/CSS/jquery-ui.css" rel="stylesheet" />
<link href="~/Assets/trader/CSS/Offer.css" rel="stylesheet" />

<script src="~/Assets/common/JS/jquery-ui.js"></script>
<script src="~/Assets/trader/JS/Transaction.js"></script>
<script src="~/Assets/trader/JS/AdvancedBtn.js"></script>
<h2>Transaction</h2>

<div>
    <button class="btn btn-primary" id="advanced_search">Tìm kiếm nâng cao</button>

    <form id="PurchaseRangeSearchTbl" style="margin-top:10px;">
        <div class="row">
            <div class="col-md-9">
                <div class="inline" style="padding-right:10px;padding-left:20px;">
                    <fieldset>
                        <legend>TÌm khoảng ngày:</legend>
                        <input id="datetimebegin" type="text" name="min" autocomplete="off" data-date-format="dd/mm/yyyy" placeholder="Ngày Bắt Đầu" />
                        <input id="datetimeend" type="text" name="max" autocomplete="off" data-date-format="dd/mm/yyyy" placeholder=" Ngày kết Thúc" />
                    </fieldset>
                </div>

                <div class="inline">
                    <fieldset>
                        <legend>TÌm khối lượng</legend>
                        <input id="weightbegin" type="text" name="min" autocomplete="off" data-date-format="dd/mm/yyyy" placeholder="Khối Lượng Nhỏ Nhất" />
                        <input id="weightend" type="text" name="max" autocomplete="off" data-date-format="dd/mm/yyyy" placeholder="Khối Lượng Lớn Nhất" />
                    </fieldset>
                </div>
            </div>

        </div>

    </form>
</div>

<table id="transactionOfferTbl" class="table table-striped table-bordered table-hover" style="width: 100%">
    <thead>
        <tr>
            <th>Ngày kết câp nhật</th>
            <th>Nông Trại</th>
            <th>Chủ nông trại</th>
            <th>Sản Phẩm</th>
            <th>Khối Lượng</th>
            <th>Đơn vị</th>
            <th>Đơn Giá <br /> (VND/tấn)</th>
            <th>Trạng Thái</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row_@item.Id_TransactionOrder">
                <td>@item.Transaction_Date</td>
                <td>@item.SALE_OFFER_DETAIL.SALE_OFFER.FARM.Name_Farm</td>
                <td>@item.SALE_OFFER_DETAIL.SALE_OFFER.FARM.FARMER.Name_Farmer</td>
                <td>@item.PRODUCT_DETAIL.PRODUCT.Name_Product</td>
                <td>@item.SALE_OFFER_DETAIL.Quantity_SaleOfferDetail</td>
                <td>@item.SALE_OFFER_DETAIL.SALE_OFFER.MASS_UNIT.Name_MassUnit</td>
                <td>@item.SALE_OFFER_DETAIL.SALE_OFFER.Price_Offer</td>
                <td> @item.STATUS_TRANS.Name_StatusTrans</td>
                <td>
                    @*@if (item.STATUS_TRANS.Name_StatusTrans == "Đã giao hàng ")*@

                    <button class="btn btn-primary" type="button" id="delievered" onclick="location.href='@Url.Action("Confirm", "Transaction")'">Đã Giao Hàng</button>


                    <button class="btn btn-danger " type="button" id="cancel" onclick="location.href='@Url.Action("Cancel", "Transaction")'">
                        <span class="glyphicon glyphicon-trash"></span> 
                    </button>

                </td>
            </tr>
        }
    </tbody>
</table>