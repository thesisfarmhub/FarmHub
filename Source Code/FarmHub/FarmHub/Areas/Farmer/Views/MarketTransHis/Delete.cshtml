@model Model.EF.FARMER

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Farmer/Views/Shared/_Layouts.cshtml";
}

<head>
    <title>Delete Farmer</title>
</head>

<div class="card">

    <div class="card-header card-header-color">
        <h5>Xóa thông tin chủ nông trại</h5>
    </div>

    <div class="card-body card-body-color">
        <div class="container">
            <div class="row" style="padding-top:10px">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="container">
                    <table>
                        <tbody>

                            <tr>
                                <td>Tên chủ nông trại: </td>
                                <td>@Html.DisplayFor(model => model.Name_Farmer)</td>
                            </tr>
                            <tr>
                                <td>Ngày sinh: </td>
                                <td>@Html.DisplayFor(model => model.Birthday_Farmer)</td>
                            </tr>

                            <tr>
                                <td>Địa chỉ: </td>
                                <td>@Html.DisplayFor(model => model.Address_Farmer)</td>
                            </tr>

                            <tr>
                                <td>Số điện thoại: </td>
                                <td>@Html.DisplayFor(model => model.Telephone_Farmer)</td>
                            </tr>

                            <tr>
                                <td>Số điện thoại: </td>
                                <td>@Html.DisplayFor(model => model.Telephone_Farmer)</td>
                            </tr>

                            <tr>
                                <td>
                                    <img src="@Url.Content(Model.Image_Farmer)" style="max-height:100px; max-width:100px" />
                                </td>
                            </tr>

                        </tbody>
                    </table>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div>
                            <button align="center" class="btn brown" type="submit">Xóa</button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
