
@model Model.DTO.Farmer.FarmerOfferDTO


@{
    /**/

    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}

<link href="~/Assets/trader/CSS/Offer.css" rel="stylesheet" />
<link href="~/Assets/common/CSS/nice-select.css" rel="stylesheet" />


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>

<script src="~/Assets/common/JS/jquery.nice-select.js"></script>
<script src="~/Assets/common/JS/niceSelectBoxScript.js"></script>


<script src="~/Assets/trader/JS/AdvancedBtn.js"></script>
<script src="~/Assets/farmer/JS/FarmerOffer.js"></script>


<style>
    body {
        min-width: 1600px !important;
    }
</style>
<div class="row">
    <div class="col-md-5" style="margin-right:30px;">
        <button class="small blue button" id="advanced_search">Tìm kiếm nâng cao</button>
    </div>
</div>


<div>
    <form id="PurchaseRangeSearchTbl" style="margin-top:10px;">
        <div class="row">
            <div class="col-md-9">
                <div class="inline" style="padding-right:10px;padding-left:20px;">
                    <fieldset>
                        <legend class="RoundCorner">Khoảng ngày:</legend>
                        <input id="Purchasedatetimebegin" type="text" name="min" autocomplete="off" data-date-format="dd/mm/yyyy" placeholder="Ngày Bắt Đầu" />
                        <input id="Purchasedatetimeend" type="text" name="max" autocomplete="off" data-date-format="dd/mm/yyyy" placeholder=" Ngày kết Thúc" />
                    </fieldset>
                </div>

                <div class="inline">
                    <fieldset>
                        <legend class="RoundCorner">Khối lượng</legend>
                        <input id="Purchaseweightbegin" type="text" name="min" autocomplete="off" data-date-format="dd/mm/yyyy" placeholder="Khối Lượng Nhỏ Nhất" />
                        <input id="Purchaseweightend" type="text" name="max" autocomplete="off" data-date-format="dd/mm/yyyy" placeholder="Khối Lượng Lớn Nhất" />
                    </fieldset>
                </div>
            </div>


            <div class="col-md-3">
                <div class="inline" style="padding-right:10px;padding-left:20px;">
                    <fieldset>
                        <legend class="RoundCorner">Khoảng ngày:</legend>
                        <input id="Saledatetimebegin" type="text" name="min" autocomplete="off" data-date-format="dd/mm/yyyy" placeholder="Ngày Bắt Đầu" />
                        <input id="Saledatetimeend" type="text" name="max" autocomplete="off" data-date-format="dd/mm/yyyy" placeholder=" Ngày kết Thúc" />
                    </fieldset>
                </div>

                <div class="inline">
                    <fieldset>
                        <legend class="RoundCorner">Khối lượng</legend>
                        <input id="Saleweightbegin" type="text" name="min" autocomplete="off" data-date-format="dd/mm/yyyy" placeholder="Khối Lượng Nhỏ Nhất" />
                        <input id="Saleweightend" type="text" name="max" autocomplete="off" data-date-format="dd/mm/yyyy" placeholder="Khối Lượng Lớn Nhất" />
                    </fieldset>
                </div>
            </div>

        </div>
    </form>

</div>

<div class="row">
    @*<div class="col-md-5" style="margin-right:30px;">
        </div>*@
    <div class="col-md-7">
        <div class="col-md-offset-9">
            <button class="small blue button" id="plusBtn" data-toggle="modal" data-target="#NewOfferModal" title="Tạo đơn mới"><span class="fa fa-plus"></span></button>
        </div>
    </div>
</div>

<br />

<div class="row">
    <div class="col-md-6">
        <Center><h2>Đơn Đặt Bán</h2></Center>

        <table id="saleOfferTbl" class="table table-striped table-bordered table-hover" style="width:100%">
            <thead>
                <tr>
                    <th> Thương Lượng</th>
                    <th>Ngày tạo</th>
                    <th>Nông Trại</th>
                    <th>Sản Phẩm</th>
                    <th>Giống</th>
                    <th>Khối Lượng</th>
                    <th>Đơn Vị</th>
                    <th>Đơn Giá <br /> (VND/tấn)</th>
                    <th>Số Đơn</th>
                    <th> Chi tiết</th>
                </tr>
            </thead>
        </table>
    </div>

    <div class="col-md-6">
        <Center><h2>Đơn Đặt Mua Phù Hợp</h2></Center>
        <table id="purchaseOfferTbl" class="table table-striped table-bordered table-hover" style="width: 100%">
            <thead>
                <tr>
                    <th>Thương lái</th>
                    <th>Sản Phẩm</th>
                    <th>Giống</th>
                    <th>Khối Lượng</th>
                    <th>Đơn Vị</th>
                    <th>Đơn Giá <br />(VND/tấn)</th>
                    <th> Chi tiết</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>


<!-- Create Offer -->
<div class="modal animated fadeInDownBig " data-easeout="slideDownIn" id="NewOfferModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h3 class="modal-title w-100 font-weight-bold" style="margin-left:20px;">Tạo đơn đặt bán mới</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="fa fa-close"></span>
                </button>
            </div>

            <div class="modal-body mx-3">
                <form autocomplete="off">
                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" for="form3">*Sản Phẩm</label>
                        <select class="wide RoundCorner">
                            <option data-display="---Chọn Sản Phẩm---">---Chọn Sản Phẩm---</option>
                            @foreach (var item in Model.products)
                            {
                                <option value="@item.productid">@item.productName</option>
                            }
                        </select>

                    </div>

                    <br />
                    <br />

                    <label data-error="wrong" data-success="right" for="form3">*Số lượng</label>
                    <div class="md-form mb-1 form-inline">
                        <div class="row">
                            <div class="col-md-8">
                                <input class="form-control validate RoundCorner bigInput" type="number" placeholder="Số lượng" min="1" style="width:100%;">
                            </div>

                            <div class="col-md-4">

                                <label data-error="wrong" data-success="right" for="form3"></label>

                                <select class="wide RoundCorner">
                                    <option data-display="---Chọn Đơn vị---">---Chọn Đơn vị---</option>
                                    @foreach (var item in Model.units)
                                    {
                                        <option value="@item.id">@item.name</option>
                                    }
                                </select>

                            </div>
                        </div>
                    </div>

                    <div class="md-form mb-5">

                        <label data-error="wrong" data-success="right" for="form2">*Giá( VNĐ/tấn )</label>
                        <input type="text" class="form-control validate RoundCorner bigInput" type="number" placeholder="Số lượng" min="1" style="width:100%;">

                    </div>

                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" for="form2">*Thời gian trả tiền</label>
                        <input class="form-control validate RoundCorner bigInput" type="number" placeholder="Số lượng" min="1" style="width:100%;">


                    </div>

                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" for="form2">*Thời gian giao hàng</label>
                        <input class="form-control validate RoundCorner bigInput" type="number" placeholder="Số lượng" min="1" style="width:100%;">

                    </div>

                    <div class="md-form mb-5">
                        <span class="button-checkbox">
                            <input type="checkbox" value="true" class="hidden" /> Cho phép thỏa thuận
                        </span>


                    </div>

                    <div class="modal-footer d-flex justify-content-center">
                        <button class=" big green button RoundCorner">Tạo Mới </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


