@model Model.EF.PRODUCT

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Farmer/Views/Shared/_Layouts.cshtml";
}

<head>
    <title>Delete Product</title>
</head>

<div class="card">

    <div class="card-header card-header-color">
        <h5>Xóa nông sản</h5>
    </div>

    <div class="card-body card-body-color">
        <div class="container">
            <div class="row" style="padding-top:10px">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="container">
                    <table>
                        <tbody>

                            @Html.HiddenFor(model => model.Id_Product)

                            <tr>
                                <td>Loại nông sản</td>
                                <td>@Html.DisplayFor(model => model.PRODUCT_KIND.Name_ProductKind)</td>
                            </tr>

                            <tr>
                                <td>Tên nông sản</td>
                                <td>@Html.DisplayFor(model => model.Name_Product)</td>
                            </tr>

                        </tbody>
                    </table>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div>
                            <button align="center" class="btn brown" type="submit">Xóa</button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
