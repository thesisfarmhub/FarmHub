@model IEnumerable<Model.EF.FARM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Farmer/Views/Shared/_Layouts.cshtml";
}

<head>
    <title>Manage Farm</title>

    <style>
        table, thead, tr, tbody, th, td {
            text-align: center;
        }
    </style>

</head>

<!-- Start About us -->
<section id="mu-about-us">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-about-us-area">
                    <div class="mu-title">
                        <span class="mu-subtitle">Farm</span>
                        <h2>QUẢN LÝ NÔNG TRẠI</h2>
                        <i class="fa fa-spoon"></i>
                        <span class="mu-title-bar"></span>
                    </div>
                    <div class="row">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tên nông trại</th>
                                    <th>Địa chỉ</th>
                                    <th>Thành phố</th>
                                    <th>Diện tích</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Name_Farm)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Address_Farm)</td>
                                        <td>@Html.DisplayFor(modelItem => item.City_Farm)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Acreage)</td>
                                        <td>
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.Id_Farm }) |
                                            @Html.ActionLink("Xem", "Details", new { id = item.Id_Farm }) |
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.Id_Farm }) |
                                            @Html.ActionLink("Nông Sản", "Index", "ProductDetails", new { id = item.Id_Farm }, null)
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>

                        <center>
                            <button onclick="location.href = '@Url.Action("Create","Farm")'" class="mu-readmore-btn">Thêm Mới Nông Trại</button>
                        </center>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End About us -->
