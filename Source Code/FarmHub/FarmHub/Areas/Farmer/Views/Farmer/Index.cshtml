<!-- Start About us - NHU CẦU BÁN CỦA TÔI -->
<section id="mu-about-us">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-about-us-area">
                    <div class="mu-title">
                        <span class="mu-subtitle">Mua Bán</span>
                        <h2>NHU CẦU BÁN CỦA TÔI</h2>
                        <i class="fa fa-spoon"></i>
                        <span class="mu-title-bar"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-9">
                            <section id="mu-chef">
                                <div class="mu-chef-area">
                                    <div class="mu-chef-content">
                                        <ul class="mu-chef-nav">
                                            @foreach (var item in Model.ListSaleOffer)
                                            {
                                                <li>
                                                    <div class="mu-single-chef">
                                                        <figure class="mu-single-chef-img">
                                                            <img src="@item.PRODUCT_DETAIL.Image_ProductDetail" alt="chef img">
                                                        </figure>
                                                        <div class="mu-single-chef-info">
                                                            <h4>@item.PRODUCT_DETAIL.PRODUCT.Name_Product - @item.PRODUCT_DETAIL.SEED.Name_Seed</h4>
                                                            <span>Khối Lượng: @item.Quantity_SaleOffer tons</span>
                                                            <br />
                                                            <span>Giá: @item.Price_Offer$</span>
                                                        </div>
                                                        <div class="mu-single-chef-social">
                                                            <button onclick="location.href = '@Url.Action("ActionName","ControllerName")'" type="button" class="mu-readmore-btn">Chi Tiết</button>
                                                        </div>
                                                    </div>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </section>
                        </div>
                        <div class="col-md-3">
                            <div class="mu-about-us-right">
                                <img src="~/Assets/HTML/SpicyX/img/about-us/abtus-img-1.png" style="max-width:100%; max-height:100%;" alt="img">
                                <img src="~/Assets/HTML/SpicyX/img/about-us/abtus-img-1.png" style="max-width:100%; max-height:100%;" alt="img">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End About us -->
